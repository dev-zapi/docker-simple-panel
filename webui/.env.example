# API Configuration
# Use mock API for development (set to 'false' to use real API)
VITE_USE_MOCK_API=true

# API URL (optional, defaults to /api for reverse proxy)
# Only set this if you need to use a different API endpoint
# VITE_API_URL=http://localhost:3000/api

# Development proxy target (for Vite dev server)
# This is the backend server that /api requests will be proxied to
VITE_API_PROXY_TARGET=http://localhost:3000
